        </div>
    </div>
</section>

<section id="product-section">
    <div class="container">
        <h1 class="display-6 text-primary my-5">Products</h1>
        @{
            if (Model != null && Model.Products != null && Model.Products.Count > 0)
            {
                <div class="row">

                    @{
                        foreach (var product in Model.Products)
                        {
                            <div class="col-md-3">

                                <div class="g-0 border rounded overflow-hidden mb-4 shadow-sm h-md-250 position-relative">
                                    <a asp-controller="Product" asp-action="Detail" asp-route-ID="@product.ID" class="row flex-md-row">
                                        <div class="col-6 p-4 pb-0 d-flex flex-column position-static">
                                            <h3 class="mb-0">@product.Name</h3>
                                            <strong class="d-inline-block mt-5 text-primary">@product.Price Kč</strong>
                                        </div>
                                        <div class="col-6 d-none d-lg-block">
                                            <img src="@product.ImageSource" alt="@product.ImageAlt">
                                        </div>
                                    </a>
                                    <div class="col-12 d-none p-4 d-lg-block">
                                        <button type="button" class="btn btn-primary" onclick="Buy(@product.ID,'@Url.Action("AddOrderItemsToSession", "CustomerOrders", new {Area = "Customer"})', '#total_price', '@System.Globalization.CultureInfo.CurrentCulture.Name')"><i class="bi-cart-fill me-1"></i>Add To Cart</button>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            }
        }
    </div>
</section>