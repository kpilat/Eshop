@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}



@{
    if (Model != null && Model.CarouselItems != null && Model.CarouselItems.Count > 0)
    {
        <!--HOME SECTION-->

        <section id="home" class="home-section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-12 m-auto">
                        <h1 class="display-5 mb-4 text-white">Our Best Phone Provide Service Our Business</h1>
                        <p class="home-section__description">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Alias distinctio nihil quam quisquam rerum, sed!</p>
                        <div class="container py-5 px-0 home-section__buttons">
                            <button type="button" class="btn btn-lg get-button get-button-accent-color">
                                <span>
                                    <i class="fas fa-shopping-cart"></i>
                                </span>
                                order now
                            </button>
                            <button type="button" class="btn btn-lg get-button get-button-accent-color">
                                <span>
                                    <i class="fab fa-apple"></i>
                                </span>
                                get in apple store
                            </button>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 m-auto">
                        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-indicators">
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                            </div>
                            <div class="carousel-inner">
                                @{
                                    int first = 0;
                                    foreach (var item in Model.CarouselItems)
                                    {
                                        <div class="carousel-item @(first == 0 ? "active" : "") carousel-card">
                                            <div class="container">
                                                <img src="@item.ImageSource" class="" alt="@item.ImageAlt">
                                            </div>
                                        </div>
                                        first++;
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
                <path fill="#ffffff" fill-opacity="1" d="M0,64L1440,192L1440,320L0,320Z"></path>
            </svg>

        </section>
    }
}

