@model CarouselItem
@{
    if (ViewBag.Action != null)
    {
    <form asp-action="@ViewBag.Action" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        @{ if (ViewBag.Action == nameof(CarouselController.Edit))
                            {
            <input asp-for="ID" type="hidden"> } }

        <div class="form-group">
            <label asp-for="ImageSource">Image Source</label>
            <input asp-for="ImageSource" type="text" class="form-control" placeholder="Enter image source">
        </div>
        <div class="form-group">
            <label asp-for="Image">Image</label>
            <input id="fileupload" asp-for="Image" class="form-control-file" accept="image/*" placeholder="Enter img source">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    }
}

@section Scripts 
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}